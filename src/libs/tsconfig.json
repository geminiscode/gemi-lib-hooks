{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "target": "ES2020",
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "./dist/types",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "./hooks/**/*",
        "./index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}